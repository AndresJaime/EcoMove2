<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@drawable/fondo_dialogo">

    <TextView
        android:id="@+id/mensajeDialogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="¿Estás seguro que deseas cerrar sesión?"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/botonCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mensajeDialogo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:background="@color/button_cancel"
        android:text="Cancelar"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/botonCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mensajeDialogo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:background="@color/button_logout"
        android:text="Cerrar sesión"
        android:textColor="@color/white" />

</RelativeLayout>
