<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Localizacion"
    android:background="@drawable/ninguno">

    <!-- Botón para retroceder -->
    <ImageView
        android:id="@+id/volverButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="volver"
        android:src="@drawable/flecha" />

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Sucursal"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/deslizadorBicicletas"
        android:layout_width="match_parent"
        android:layout_height="575dp"
        android:layout_below="@id/tituloTextView"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/contenidoEstatico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deslizadorBicicletas"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:text="Contenido Estático 1"
        android:textSize="14sp"
        android:textColor="@android:color/white"/>
</RelativeLayout>
