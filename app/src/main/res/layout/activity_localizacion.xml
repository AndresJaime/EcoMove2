<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Localizacion"
    android:background="@drawable/ninguno">

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sucursal"
        android:textSize="24sp"
        android:textColor="@android:color/black"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/deslizadorBicicletas"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/tituloTextView"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/contenidoEstatico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deslizadorBicicletas"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:text="Contenido EstÃ¡tico 1"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>
</RelativeLayout>
